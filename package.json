{
  "name": "crm-dashboard-api",
  "version": "0.1.0",
  "description": "CRM Dashboard API with Typescript",
  "author": "Enrique",
  "scripts": {
    "start": "yarn run serve",
    "build": "rm -rf dist/* && yarn run build-ts && yarn run lint",
    "restart-serve": "yarn install && yarn run build && pm2 restart pm2.config.yml",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --verbose --runInBand --detectOpenHandles --coverage && coveralls < coverage/lcov.info",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts,d.ts}\" --quiet --fix",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect=9223 dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\" "
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint \"**/*.{js,ts,d.ts}\" --quiet"
    }
  },
  "_moduleAliases": {
    "root": "dist"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^2.5.0",
    "@sendgrid/mail": "^7.2.6",
    "@types/backoff": "^2.5.1",
    "@types/cors": "^2.8.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mjml": "^4.0.4",
    "@types/nodemailer": "^6.4.0",
    "@types/request": "^2.48.5",
    "async": "^3.1.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.0.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "grpc": "^1.24.3",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mjml": "^4.6.3",
    "module-alias": "^2.2.2",
    "mongodb-memory-server": "^6.0.2",
    "mongoose": "^5.8.1",
    "mongoose-sequence": "^5.2.2",
    "nodemailer": "^6.4.11",
    "nylas": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "superagent": "^5.2.2",
    "ts-error": "^1.0.4",
    "ts-optchain": "^0.1.8",
    "typedi": "^0.8.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.3",
    "@types/compression": "^1.0.1",
    "@types/concurrently": "^4.1.0",
    "@types/connect-mongo": "^0.0.43",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-flash": "0.0.1",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.141",
    "@types/mongoose": "^5.5.18",
    "@types/node": "^12.7.8",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.4.0",
    "husky": "^4.3.0",
    "jest": "^25.1.0",
    "nodemon": "^1.19.2",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.0"
  }
}
