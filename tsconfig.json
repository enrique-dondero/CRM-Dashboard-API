{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "plugins": [
      {
        "transform": "ts-optchain/transform"
      }
    ],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/models/*"
      ],
      "root/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}